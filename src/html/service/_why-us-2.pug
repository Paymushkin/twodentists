                            p.service-why-us__item-text= item.text

                    .service-why-us__image
                        picture
                            source(media="(max-width: 576px)" srcset="@img/service/why-us-1-mobile.png")
                            source(media="(max-width: 1024px)" srcset="@img/service/why-us-1-tablet.png")
                            img(src="@img/service/why-us-1.png" alt="Почему наша клиника" loading="lazy")   

